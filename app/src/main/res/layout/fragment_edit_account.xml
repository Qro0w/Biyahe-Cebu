<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp"
    tools:context=".EditAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:elevation="4dp"
            android:background="@drawable/sign_out_button">

            <!-- Back Button REMOVED -->
            <!--

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/back"
                android:contentDescription="Back" />

                -->
        </RelativeLayout>

        <!-- Profile Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp">

            <ImageView
                android:id="@+id/editProfileImage"
                android:layout_width="135dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="43dp"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_placeholder" />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@id/editProfileImage"
                android:layout_alignBottom="@id/editProfileImage"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Edit Profile"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/edit_icon" />
        </RelativeLayout>

        <!-- Form for User Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="16dp">

            <!-- First Name -->
            <TextView
                android:id="@+id/tvFirstNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_border"
                android:hint="user"
                android:padding="12dp" />

            <!-- Last Name -->

            <!-- Email -->
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Email"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_border"
                android:hint="Email"
                android:padding="12dp"
                android:inputType="textEmailAddress" />

            <!-- Reset Password Button -->
            <TextView
                android:id="@+id/tvResetPasswordBtn"
                android:textColor="#FDA328"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Reset Password"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Save Changes Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:text="Save Changes"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/save_button"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>
