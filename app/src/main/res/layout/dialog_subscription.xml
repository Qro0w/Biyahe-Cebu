<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/card_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Premium Plan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/planRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/monthlyPlanRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Plan - $4.99/month"
            android:checked="true"
            android:paddingVertical="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/yearlyPlanRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yearly Plan - $49.99/year (Save 17%)"
            android:paddingVertical="8dp"
            android:textSize="16sp" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premium features include:\n• Ad-free experience\n• Offline maps\n• Priority customer support\n• Route planning\n• Real-time traffic updates"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelSubscribeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="#E0E0E0"
            android:textColor="#333333"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/confirmSubscribeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subscribe"
            android:backgroundTint="#1CAE81"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
